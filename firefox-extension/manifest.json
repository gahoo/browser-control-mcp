{
  "manifest_version": 2,
  "name": "Browser Control MCP",
  "version": "1.5.0",
  "description": "An extension that allows a local MCP server to perform actions on the browser.",
  "permissions": [
    "tabs",
    "tabGroups",
    "history",
    "storage",
    "<all_urls>"
  ],
  "optional_permissions": [
    "activeTab",
    "find"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "dist/media-interceptor.js"
  ],
  "browser_action": {
    "default_title": "Browser Control",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  }
}